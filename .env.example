# Schema Web Analyzer - Environment Configuration

# Server Configuration
NODE_ENV=development
HOST=localhost
PORT=3000

# CORS Settings (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Rate Limiting
RATE_LIMIT_POINTS=100
RATE_LIMIT_DURATION=60

# Puppeteer Configuration
PUPPETEER_HEADLESS=true
PUPPETEER_TIMEOUT=30000
VIEWPORT_WIDTH=1920
VIEWPORT_HEIGHT=1080
USER_AGENT=Schema-Web-Analyzer/1.0 (+https://schema-analyzer.com/bot)

# Crawling Limits
MAX_PAGES_PER_SCAN=100
MAX_CONCURRENT_PAGES=5
CRAWL_DELAY=1000
REQUEST_TIMEOUT=15000
MAX_CRAWL_DEPTH=3

# File Storage
SCANS_DIR=data/scans
CACHE_DIR=data/cache
TEMPLATES_DIR=data/templates
MAX_SCAN_AGE_DAYS=30
MAX_CACHE_SIZE_MB=500

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_FILES=5
LOG_MAX_SIZE=20m

# Security
# ALLOWED_DOMAINS=example.com,trusted-site.com
BLOCKED_DOMAINS=localhost,127.0.0.1,0.0.0.0
MAX_URL_LENGTH=2048

# Performance Monitoring
ENABLE_METRICS=false
METRICS_INTERVAL=60000

# Feature Flags
ENABLE_CACHING=true
ENABLE_COMPRESSION=true
ENABLE_RATE_LIMITING=true
ENABLE_ENTITY_ANALYSIS=true
ENABLE_SITE_MAPPING=true

# Development Settings
# Set to false to show browser window during development
# PUPPETEER_HEADLESS=false

# Production Settings (uncomment for production)
# NODE_ENV=production
# LOG_LEVEL=warn
# ENABLE_METRICS=true
# RATE_LIMIT_POINTS=50
