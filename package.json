{
  "name": "schema-web-analyzer", 
  "version": "1.0.0",
  "description": "Advanced Schema markup analyzer with entity relationships and consistency checking",
  "main": "api/server.js",
  "scripts": {
    "start": "node api/server.js",
    "dev": "nodemon api/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "setup": "node scripts/setup.js",
    "lint": "eslint api/ --ext .js",
    "format": "prettier --write \"api/**/*.js\"",
    "health-check": "node scripts/health-check.js"
  },
  "keywords": [
    "seo", 
    "schema", 
    "markup", 
    "analyzer", 
    "json-ld", 
    "structured-data",
    "entity-relationships",
    "consistency-analysis"
  ],
  "author": "Schema Web Analyzer",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/schema-web-analyzer.git"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "puppeteer": "^21.5.2", 
    "cheerio": "^1.0.0-rc.12",
    "axios": "^1.6.0",
    "uuid": "^9.0.1",
    "joi": "^17.11.0",
    "winston": "^3.11.0",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "rate-limiter-flexible": "^4.0.1",
    "node-cron": "^3.0.3",
    "fs-extra": "^11.1.1",
    "lodash": "^4.17.21",
    "validator": "^13.11.0",
    "moment": "^2.29.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "api/**/*.js",
      "!api/server.js"
    ],
    "testTimeout": 30000
  },
  "nodemonConfig": {
    "watch": ["api/"],
    "ext": "js,json",
    "ignore": ["data/", "logs/", "test/"]
  }
}
